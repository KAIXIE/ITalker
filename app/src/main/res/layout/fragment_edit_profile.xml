<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.qiujuer.italker.push.frags.setting.EditProfileFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_weight="1"
                android:padding="@dimen/len_6"
                android:text="恰同学"
                android:textAppearance="@style/TextAppearance.Title"
                android:textSize="@dimen/font_28" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/change_portrait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/len_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="更换头像"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />

            <net.qiujuer.italker.common.widget.PortraitView
                android:id="@+id/portraitView"
                android:layout_width="@dimen/len_44"
                android:layout_height="@dimen/len_44"
                android:layout_gravity="center_vertical"
                android:src="@drawable/default_portrait"

                />

            <ImageView
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_28"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginRight="@dimen/len_4"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/setting_right" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/len_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="修改昵称"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="李元芳"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />

            <net.qiujuer.italker.common.widget.PortraitView
                android:id="@+id/portrait"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_28"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginRight="@dimen/len_4"
                android:background="@color/transparent"
                android:src="@drawable/setting_right" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_motto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/len_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="座右铭"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="小伙羞嗒嗒，人生太复杂"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />


            <ImageView
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_28"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_marginRight="@dimen/len_4"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/setting_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/len_16">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingLeft="@dimen/len_6"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="@dimen/len_16" />

            <RadioGroup
                android:id="@+id/sex_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue_600"
                    android:checked="true"
                    android:text="男"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue_600"
                    android:text="女"
                    android:textColor="@color/black" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/save_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/len_28"
            android:layout_marginStart="@dimen/len_28"
            android:layout_marginTop="@dimen/len_16"
            android:background="@drawable/shape_corner_submit"
            android:gravity="center"
            android:padding="@dimen/len_10"
            android:text="保存资料"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>