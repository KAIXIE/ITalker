<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/function_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/len_28"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:scaleType="fitXY"
            android:src="@drawable/album_person" />

        <TextView
            android:layout_marginTop="@dimen/len_6"
            android:id="@+id/tv_name"
            android:textSize="@dimen/len_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:textColor="@color/black" />
    </LinearLayout>


</LinearLayout>


