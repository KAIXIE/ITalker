<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.qiujuer.italker.push.frags.bankcard.BankcardProfileFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_4"
                android:background="@null"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:foreground="@drawable/ic_touch_menu"
                android:padding="@dimen/len_6"
                android:scaleType="centerInside"
                android:src="@drawable/back"
                android:tint="?attr/toolbarMenuIconColor" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_weight="1"
                android:padding="@dimen/len_6"
                android:text="添加银行卡"
                android:textAppearance="@style/TextAppearance.Title"
                android:textSize="@dimen/font_28" />

            <ImageButton
                android:id="@+id/add_bankcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/len_2"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/doctor_add_bankcard" />


        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey_200"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/len_8"
            android:text="请绑定持卡人本人的银行卡"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/len_20" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/len_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/len_8"
                android:text="    持卡人"
                android:textColor="@color/black"
                android:textSize="@dimen/len_20" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:padding="@dimen/len_4"
                android:textColor="@color/black"
                android:textSize="@dimen/len_20" />

            <ImageButton
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="@dimen/len_2"
                android:scaleType="centerInside"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@android:drawable/ic_dialog_info"
                android:tint="@color/orange_500" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_400"

            android:padding="@dimen/len_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/len_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/len_8"
                android:text="银行卡号"
                android:textColor="@color/black"
                android:textSize="@dimen/len_20" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:padding="@dimen/len_4"
                android:textColor="@color/black"
                android:textSize="@dimen/len_20" />
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/len_28"
            android:layout_marginStart="@dimen/len_28"
            android:layout_marginTop="@dimen/len_16"
            android:background="@drawable/shape_corner_submit"
            android:gravity="center"
            android:padding="@dimen/len_10"
            android:text="下一步"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>

